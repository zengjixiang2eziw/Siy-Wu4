<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="3dp"
                android:right="0dp"
                android:top="3dp" />
            <solid android:color="#ffffff" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="4dp"
                android:left="-3dp"
                android:right="4dp"
                android:top="-3dp" />
            <solid android:color="#33000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- 真实背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
            <stroke
                android:width="3dp"
                android:color="#4a4a4a" />
        </shape>
    </item>
</layer-list>
